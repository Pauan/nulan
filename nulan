#! /usr/bin/env node
"use strict";

// http://stackoverflow.com/a/8808162/449477
var vm = require("vm")
var fs = require("fs")
function load(path, context) {
  var data = fs.readFileSync(path, "utf8")
  vm.runInThisContext(data, path)
}

load("./lib/NINO.compile.js")
load("./lib/NINO.transform.js")
load("./NULAN.js")
load("./NULAN.parse.js")

load("./lib/NUIT.serialize.js")

NULAN.readFile = function (s) {
  return fs.readFileSync(s, "utf8")
}

NULAN.vars["prn"]     = "prn"
NULAN.values["prn"]   = prn

NULAN.import("NULAN.macros")


var opts = {
  debug: {
    tokenize: false,
    parse: false,
    compile: false,
    eval: false
  }
}

var args = process.argv.slice(2).filter(function (x) {
  // TODO: better cli parsing
  if (x === "-d") {
    //opts.debug.tokenize = true
    opts.debug.parse = true
    opts.debug.compile = true
    opts.debug.eval = true
    return false
  } else {
    return true
  }
})

var globals = { require:    require
              , prn:        prn
              , "_38_src":  process.argv[1]
              , "_38_args": args }

NULAN.vars["require"] = "require"
NULAN.vars["&src"]    = "&src"
NULAN.vars["&args"]   = "&args"


var util = require("util")

var rl = require("./lib/cli").create({
  completer: function (s) {
    var a = Object.keys(NULAN.vars).filter(function (s2) {
      return s2.indexOf(s) === 0
    }).sort(function (l, r) {
      if (l[0] === "&" && r[0] !== "&") {
        return 1
      } else if (l[0] !== "&" && r[0] === "&") {
        return -1
      } else {
        return l.localeCompare(r)
        //return l < r ? -1 : l > r ? 1 : 0
      }
    })
    return [a, s]
  }
})

function print(a) {
  console.log(NUIT.serialize([a], { multiline: true }))
}

function pretty(x) {
  return util.inspect(x, false, null, false)
}

// TODO: move into NULAN.js
function transform(a) {
  if (Array.isArray(a)) {
    return a.map(transform)
  } else if (a instanceof NULAN.Symbol || a instanceof NULAN.Bypass) {
    return a.value
  } else if (typeof a === "string") {
    return "\"" + a + "\"" // TODO replace " inside the string with \"
  } else {
    return a
  }
}

function printTokens(a) {
  return a.map(function (x) {
    x = x.name
    if (x instanceof NULAN.Symbol) {
      return x.value
    } else {
      return x
    }
  }).join(" ")
}

rl.on("input", function (s) {
  try {
    var x = NULAN.tokenize(s)
    if (opts.debug.tokenize) {
      print(["tokenize", printTokens(x)])
      console.log()
    }

    x = NULAN.parseRaw(x)
    if (opts.debug.parse) {
      print(["parse"].concat(transform(x).map(pretty)))
      console.log()
    }

    x = NULAN.compile(x)
    if (opts.debug.compile) {
      print(["compile", x])
      console.log()
    }

    //console.log("@compile\n" + x.replace(/^/gm, "  "))

    x = vm.runInNewContext(x, globals)
    if (opts.debug.eval) {
      print(["eval", pretty(x)])
    } else {
      console.log(pretty(x))
    }
    //console.log("@eval\n" + ("" + x).replace(/^/gm, "  "))
  } catch (e) {
    console.error("" + e)
  }

  console.log()
})

